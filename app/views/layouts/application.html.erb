<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <h1>Adopt, Don't Shop</h1>
    </header>
    <nav>
      <ul>
        <li><%= link_to "PETS", "/pets" %>
        <li><%= link_to "SHELTERS", "/shelters" %>
        <li><%= link_to "FAVORITES: #{favorites.total_count}", "/favorites" %>
      </ul>
    </nav>
    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
