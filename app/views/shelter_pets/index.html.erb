<div class="content">
  <h1>
    <%= link_to(@shelter.name, "/shelters/#{@shelter.id}", class: "name") %> - Pets
    <% if params[:adoptable] == 'true' %>
      <%= "(adoptable pets) (total: #{@shelter.pet_count("Adoptable")})" %>
    <% elsif params[:adoptable] == 'false' %>
      <%= "(pets pending adoption) (total: #{@shelter.pet_count("Pending")})" %>
    <% else %>
      <%= "(total: #{@shelter.pet_count})" %>
    <% end %>
  </h1>
  <p>
    <span class="spaced"><%= link_to 'Create Pet', "/shelters/#{@shelter.id}/pets/new" %></span>
    <span class="spaced"><%= link_to('Show adoptable pets only', "/shelters/#{@shelter.id}/pets?adoptable=true") %></span>
    <%= link_to('Show pending pets only', "/shelters/#{@shelter.id}/pets?adoptable=false") %>
  </p>
  <% if params[:adoptable] == 'true' %>
    <% pets = @shelter.pets.adoptable %>
  <% elsif params[:adoptable] == 'false' %>
    <% pets = @shelter.pets.pending %>
  <% else %>
    <% pets = @shelter.pets.sort_by_status %>
  <% end %>
  <% pets.each do |pet| %>
    <div class="card" id="pet-<%= pet.id %>">
      <h3>Name: <%= link_to(pet.name, "/pets/#{pet.id}", class: "big name") %></h3>
      <p><%= image_tag(pet.image) %></p><br>
      <p>Age: <span class='big'><%= pet.age %></span></p>
      <p>Sex: <span class='big'><%= pet.sex %></span></p><br>
      <%= link_to 'Update Pet', "/pets/#{pet.id}/edit", class: "small left" %>
      <%= link_to 'Delete Pet', "/pets/#{pet.id}", method: :delete, class: "small right delete" %><br>
    </div>
  <% end %>
</div>
